<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="database.pokemonhunter.Atrribute$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="charge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge1"
        android:layout_alignEnd="@+id/charge1"
        android:layout_marginTop="28dp"
        android:id="@+id/charge2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?android:attr/colorBackground"
        android:id="@+id/poke1"
        android:layout_alignTop="@+id/type1"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="?android:attr/colorBackground"
        android:id="@+id/poke2"
        android:layout_width="50dp"
        android:layout_above="@+id/charge2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type1"
        android:text="type1"
        android:layout_below="@+id/section_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type2"
        android:text="type2"
        android:layout_alignBottom="@+id/poke1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="fast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/fast2"
        android:layout_below="@+id/fast1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fast1"
        android:text="fast1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/type2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="charge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/charge1"
        android:layout_below="@+id/fast2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="disadvantage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disadvantage"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/advantage" />

    <TextView
        android:text="advantage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advantage"
        android:layout_below="@+id/poke3"
        android:layout_toEndOf="@+id/charge3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="?android:attr/colorBackground"
        android:id="@+id/poke3"
        android:layout_alignTop="@+id/charge3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="charge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/charge3"
        android:layout_below="@+id/charge2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Strong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/advantage"
        android:layout_alignParentStart="true"
        android:id="@+id/strong" />

    <TextView
        android:text="Weak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:id="@+id/weak"
        android:layout_alignBottom="@+id/disadvantage"
        android:layout_toEndOf="@+id/section_label" />

</RelativeLayout>
